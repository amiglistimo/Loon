[Argument]
Cookie-manmanbuy_checkin = switch, true, false, tag = [manmanbuy_checkin]每日签到Token, desc = 获取[manmanbuy_checkin]每日签到Token
Task-manmanbuy_checkin = switch, true, false, tag = [manmanbuy_checkin]每日签到Task, desc = 定时运行[manmanbuy_checkin]每日签到Task
Cron-manmanbuy_checkin = input, "15 0 * * *", tag = [manmanbuy_checkin]定时参数Cron, desc = 输入Cron表达式来定时运行[manmanbuy_checkin]每日签到Task

[Rule]
DOMAIN, www.manmanbuy.com, PROXY
DOMAIN-SUFFIX, manmanbuy.com, PROXY

[Script]
http-request ^https?:\/\/apph5\.manmanbuy\.com\/taolijin\/(login.aspx|logserver.aspx) requires-body=1,script-path=https://raw.githubusercontent.com/amiglistimo/Loon/refs/heads/main/Script/manmanbuy_checkin.js, requires-body = true, timeout = 60, tag = [manmanbuy_checkin]每日签到Token, enabled={Cookie-manmanbuy_checkin}
cron {Cron-manmanbuy_checkin} script-path=https://raw.githubusercontent.com/amiglistimo/Loon/refs/heads/main/Script/manmanbuy_checkin.js, timeout = 60, tag = [manmanbuy_checkin]每日签到Task, enabled={Task-manmanbuy_checkin}

[MitM]
hostname = apph5.manmanbuy.com
